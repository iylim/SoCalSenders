<h1>Log In</h1>
<br>
<div class="form-container">
  <p id="alert"><%= alert %></p>
  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, autocomplete="off", :value => nil, class: "form-control" %>
    </div>
    <div class="actions">
      <%= submit_tag "Log In", class: "btn btn-warning" %>
    </div>
  </div>
<% end %>