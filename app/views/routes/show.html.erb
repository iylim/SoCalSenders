<h3><%= link_to 'All routes', '/routes/' %></h3>
<h1> <%= @route.name %></h1>
<hr>
<p class ="route"> 
    Rating: <%= image_tag "4stars.png", :size => "80x25" %> 
  <%= link_to 'Rate Me', "/routes/#{@route.id}/ratings/new" %> <br>


    Difficulty: <%= @route.difficulty %> <br>
    Route Type: <%= @route.route_type %> <br>
    Pitches/Height: <%= @route.pitches %> <br>
    Description <br><%= @route.description %> <br>
</p>
<hr>

<h3>Pictures</h3> <br>
<div class ="routepics">
<% @route.pictures.each do |image| %>
    <%= image_tag image, :size => "250x300" %> 
    <br>
<% end %>
</div>
<br>
<%= form_with model: @route do |form| %>
    <%= form.file_field :pictures, multiple: true %> <br>
    <%= form.submit "Add Images"%>
<% end %>

<br>
<hr>
  <h3>Comments</h3>
  <%= link_to 'Add Comment', "/routes/#{@route.id}/comments/new" %>
  <ul>
  <% @route.comments.each do |comment| %>
    <li class="comment"> 
    <%= comment.body %><br>
    <%= comment.created_at %></li>
    <br>
  <% end %>
  </ul>

