<h3><%= link_to 'All Routes', '/routes/' %></h3>
<h1> <%= @route.name %></h1>
<div class="container">
<div class="users">
    <ul> <% if current_user %>
    <% if current_user.isAdmin == true %>
    <li><%= link_to 'Edit Route', edit_route_path %></li>
    <% end %>
      <% if !current_user.ratings.exists?(route: @route) %>
        <p>
         <li> Rate this Route <br>
            <%= link_to "★", route_ratings_path(@route, score: 1), method: :post %> 
            <%= link_to "★", route_ratings_path(@route, score: 2), method: :post %> 
            <%= link_to "★", route_ratings_path(@route, score: 3), method: :post %> 
            <%= link_to "★", route_ratings_path(@route, score: 4), method: :post %> </li>
        </p>
        <% end %>
        <% if !current_user.bookmarks.exists?(route: @route) %>
         <li> <%= link_to "Bookmark", bookmark_route_path, method: :put %> </li>
        <% else %>
        <li>Route bookmarked!<br>
          <%= link_to "View My Bookmarks", user_bookmarks_path(current_user.id) %></li>
      <% end %>
    <% end %>
    </ul>
  </div>

  <div class ="route"> 
      Location: <%= @route.location %> <br>
      Rating: <%= image_tag "4stars.png", :size => "80x25" %> 
      <%= @route.avg_rating %> <br>
      Difficulty: <%= @route.difficulty %> <br>
      Route Type: <%= @route.route_type %> <br>
      Pitches/Height: <%= @route.pitches %> <br><br>
      Description: <br><%= simple_format(@route.description) %>
  </div>
<hr>
  <div class ="routepics">
    <h4>Pictures</h4><br>
  <div class="images">
    <% @route.pictures.each do |image| %>
      <%= image_tag image %>
      &nbsp;&nbsp;
    <% end %>
  </div>
  <br>
  <br>
  <div class="addimages">
    <% if current_user %>
      <%= form_with model: @route do |form| %>
        <%= form.file_field :pictures, multiple: true %> <br>
        <%= form.submit "Add Images"%>
      <% end %>
    <% end %>
  </div>
  </div>
    <br>
  <hr>
  <div class="Comments">
    <h4>Comments</h4>
    <% if current_user %>
      <%= link_to 'Add Comment', new_route_comment_path(params[:id]) %>
    <% end %>  
    <ul><br>
    <% @route.comments.each do |comment| %>
      <li class="comment"> 
      <%= comment.body %><br>
      <%= comment.created_at %></li>
      <br>
    <% end %>
    </ul>
  </div>
</div>
