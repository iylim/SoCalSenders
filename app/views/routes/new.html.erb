<h1> Submit a New Route </h1>
<div class="form-group">
<%= form_for @route do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>
<br>
   <%= f.label :location %>
    <%= f.text_field :location%>
<br>
    <%= f.label :difficulty %>
    <%= f.text_field :difficulty %>
<br>
    <%= f.label :route_type %>
    <%= f.text_field :route_type %>
<br>
    <%= f.label :pitches %>
    <%= f.text_field :pitches %>
<br>
    <%= f.label :description %>
    <%= f.text_area :description, size: "30x10" %>
<br>
    <%= f.label :pictures %>
    <%= f.file_field :pictures, multiple: true %>
<br>
 <%= f.submit 'Submit' %>
 <% end %>
</div>